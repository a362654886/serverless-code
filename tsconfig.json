{
  "compilerOptions":{
      "target": "es2019",
      "module": "commonjs",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": false,
      "baseUrl": ".",
      "outDir": "./dist"
  },
  "type":"module",
  "include": [
    "*/**/*.ts"
  ],  
  "exclude": [
    "node_modules"
  ]
}
